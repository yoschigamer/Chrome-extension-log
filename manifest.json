{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "0.0.1",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "/popup/popup.html",
    "default_icon": "icon/icon128.png"
  }
}